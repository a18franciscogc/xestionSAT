<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id='xestionsat_actuacionsincidencia_action' model='ir.actions.act_window'>
        <field name="name">XestionSAT Actuacions Incidencia</field>
        <field name="res_model">xestionsat.actuacionsincidencia</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Form View -->
    <record id="xestionsat_actuacionsincidencia_view_form" model="ir.ui.view">
        <field name="name">XestionSAT Actuacions Incidencia Formulario</field>
        <field name="model">xestionsat.actuacionsincidencia</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="executado_id"/>
                    <field name="data_ini"/>
                    <field name="data_fin"/>
                    <field name="observacions"/>
                    <field name="template_id" widget="many2many_tags"/>
                </group>
                <group>
                    <group>
                        <field name="incidencias_id">
                            <tree>
                                <field name="creado_id"/>
                                <field name="titulo"/>
                                <field name="descricion"/>
                                <field name="estado"/>
                                <field name="lugar"/>
                            </tree>
                        </field>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <!-- Tree(list) View -->
    <record id="xestionsat_actuacionsincidencia_view_tree" model="ir.ui.view">
        <field name="name">XestionSAT Actuacions Incidencias Lista</field>
        <field name="model">xestionsat.actuacionsincidencia</field>
        <field name="arch" type="xml">
            <tree>
                <field name="executado_id"/>
                <field name="data_ini"/>
                <field name="data_fin"/>
                <field name="observacions"/>
            </tree>
        </field>
    </record>

    <!-- MENÚS -->
    <menuitem 
        name="Actuacións Incidencias" 
        id="xestionsat_actuacionsincidencia_sub_menu" 
        parent="xestionsat_incidencias_menu" 
        sequence="40" 
        action="xestionsat_actuacionsincidencia_action"/>
    
</odoo>
